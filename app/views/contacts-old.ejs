<%- include("partials/header.ejs") %>

            <div class="row" >
                <div class="page-header">
                    <p class="text-center" style="font-size:200%">Liste des contacts</p>
                </div>
                <div class="col-xs-2 col-md-2"></div>
                <div class=" col-xs-12 col-md-12 " id="filesListing" style="margin-top:10px">
                    <div class="container">
                        <button type="button" class="btn btn-danger primaryButtons" data-dismiss="modal" onclick="sendDataWithPost()">
                            Create Backup
                        </button>
                        <button type='button' class="btn btn-primary primaryButtons" data-dismiss="modal" onclick="addNewPhonePosition()">
                            Add New Contact
                        </button>
                        <div class="col-xs-2 col-md-2"></div>
                        <div class="row">
                            <table id="phones_table" class="dataTables table table-striped table-hover table-bordered">

                                <thead>
                                <tr>
                                    <th> Nom</th>
                                    <th> Téléphone</th>
                                    <th> Actions</th>
                                </tr>
                                </thead>
                            
                                <tbody>
                            
                                    <% for(const c of contacts) { %>
                                        <tr id= "<%=c.Name%>" >
                                            <td>
                                                <%=c.Name%>
                                            </td>
                                            <td>
                                                <span class="one-of-numbers"><%=c.Telephone%></span>
                                            </td>
                        
                                            </td>
                        
                                            <td class="with_plus">
                                                <a onclick="deleteWholePosition(this)" class="btn"><span
                                                        class="glyphicon glyphicon-trash"></span> Supprimer</a>
                                            </td>
                                        </tr>
                                        <% } %>

                                </tbody>
                            </table>
                            
                            
                            
                        </div>
                    </div>
                </div>
                <div class="col-xs-2 col-md-2"></div>
            </div>
    </div>
    


<%- include("partials/footer.ejs") %>